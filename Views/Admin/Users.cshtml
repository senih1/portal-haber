@model List<User>
@{
    ViewData["Title"] = "Kullanıcı Listesi";
}

<br />
@if (TempData["Message"] != null)
{
    <div class="alert @TempData["MessageCss"] mb-5" role="alert">
        @TempData["Message"]
    </div>
}
<div class="table-container">
    <h3 class="header">Kullanıcılar</h3>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Kullanıcı Adı</th>
                <th scope="col">Hesap Oluşturulma Tarihi</th>
                <th scope="col">Düzenle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Username</td>
                    <td>@item.CreatedDate.ToString("dd MMMM yyyy")</td>
                    <td>
                        <a href="/admin/editUserPassword/@item.Id" class="btn btn-primary">Düzenle</a>
                        <a href="/admin/deleteUser/@item.Id" class="btn btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>