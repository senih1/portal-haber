@model User
@{
    ViewData["Title"] = "Kullanıcı Düzenle";
}
<br />
<h2 class="header">@Model.Username Kullanıcısı için şifre değiştirme</h2>
<form method="post" action="/Admin/EditUserPassword/@Model.Id">
    <div class="mb-3">
        <p><input class="form-control" type="password" style="width: 250px;" placeholder="Yeni Şifre" name="password" required /></p>
        <hidden name="id" value="@Model.Id"></hidden>
        <button class="btn btn-primary">Değiştir</button>
    </div>
</form>